@model IEnumerable<Domain.Concrete.EF.Author>

@{
    ViewBag.Title = "Авторы: список";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-left: 10px">Авторы</h2>

<p style="margin-left: 10px">
    @Html.ActionLink("Добавить автора", "Create")
</p>
<table style="width: 40%; margin-left: 100px">
    <tr class="table-td">
        <th>
            Фамилия
        </th>
        <th>
            Имя
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="table-td">
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.AuthorId }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.AuthorId })
        </td>
    </tr>
}
</table>
