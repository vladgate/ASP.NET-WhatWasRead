@model IEnumerable<Domain.Concrete.EF.Tag>

@{
    ViewBag.Title = "Теги: список";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-left: 10px">Теги</h2>

<p style="margin-left: 10px">
    @Html.ActionLink("Добавить тег", "Create")
</p>
<table style="width: 40%; margin-left: 100px">
    <tr class="table-td">
        <th>
            Название для пользователя
        </th>
        <th>
            Название для ссылки
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="table-td">
            <td>
                @Html.DisplayFor(modelItem => item.NameForLabels)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameForLinks)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.TagId }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.TagId })
            </td>
        </tr>
    }
</table>
